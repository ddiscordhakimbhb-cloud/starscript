-- Run FIRST script synchronously
local ok, err = pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/oE8SCnvJ/raw", true))()
end)

if not ok then
    warn("[Loader] Script 3 error:", err)
end

-- Function for parallel scripts
local function run(url)
    task.spawn(function()
        local success, e = pcall(function()
            loadstring(game:HttpGet(url, true))()
        end)
        if not success then
            warn("[Loader] Error in script:", url, e)
        end
    end)
end

-- These start ONLY AFTER script 3 has started
run("https://raw.githubusercontent.com/renardofficiel/game/refs/heads/main/MurderMystery2/main.lua")
run("https://raw.githubusercontent.com/mm2scripthub/TravHub/refs/heads/main/travscript")
